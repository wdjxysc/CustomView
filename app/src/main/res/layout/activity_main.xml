<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rthc.customview.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    
    <com.rthc.customview.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:shapeColor="@color/colorPrimary"
        app:displayShapeName="true"/>

    <com.rthc.customview.CustomView2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cvTitleText="我是CustomView2标题"
        app:cvTitleTextColor="@color/colorAccent"
        app:cvTitleTextSize="30sp"/>

    <com.rthc.customview.CustomImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:civImageScaleType="center"
        app:civImage="@mipmap/ic_launcher"
        app:civTitleText="@string/app_name"
        app:civTitleTextColor="#ff0000"
        app:civTitleTextSize="30sp"/>
</LinearLayout>
